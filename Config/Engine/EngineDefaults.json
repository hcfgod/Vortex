{
  "Engine": {
    "Version": "1.0.0",
    "EnableAsserts": true,
    "MaxFrameRate": 0
  },
  "Window": {
    "Title": "Vortex Application",
    "Width": 1280,
    "Height": 720,
    "Fullscreen": false,
    "Resizable": true,
    "Maximized": false,
    "Centered": true,
    "MinWidth": 640,
    "MinHeight": 480,
    "MaxWidth": 0,
    "MaxHeight": 0,
    "AlwaysOnTop": false,
    "Decorated": true,
    "StartHidden": false
  },
  "Renderer": {
    "API": "OpenGL",
    "VSync": "Enabled",
    "MSAASamples": 4,
    "AnisotropicFiltering": 16,
    "TextureQuality": "High",
    "ShadowQuality": "High",
    "PostProcessing": true,
    "Gamma": 2.2,
    "ClearColor": {
      "r": 0.1,
      "g": 0.1,
      "b": 0.1,
      "a": 1.0
    }
  },
  "Performance": {
    "EnableProfiling": false,
    "EnableGPUDebug": false,
    "MemoryPoolSize": 134217728,
    "MaxConcurrentThreads": 0,
    "EnableMultithreading": true
  },
  "Logging": {
    "Level": "Info",
    "EnableAsync": true,
    "AsyncQueueSize": 8192,
    "AsyncThreadCount": 1,
    "EnableConsole": true,
    "ConsoleColors": true,
    "EnableFileLogging": true,
    "LogDirectory": "logs",
    "EnableRotation": true,
    "DailyRotation": false,
    "MaxFileSizeMB": 10,
    "MaxFiles": 5,
    "AutoFlush": false,
    "FlushIntervalSeconds": 3
  }
}
